module point(
    input clk, 
	 input en, 
	 input rst, 
	 input i, 
	 input [2:0]xMove,
	 input [2:0]yMove,
	 output reg [3:0]x,
	 output reg [3:0]y);
	 
	 reg [3:0]xReal;
	 reg [3:0]yReal;
	 
	 always @(*) begin
	     case ({xMove[2], yMove[2]}) begin
		      2'b00:
				   xReal = xMove;
					yReal = yMove;
				2'b01:
				   xReal = xMove;
					yReal = -yMove;
				2'b10:
				   xReal = -xMove;
					yReal = yMove;
				2'b11:
				   xReal = xMove;
				   yReal = yMove;
			endcase
	 end
	 
endmodule 
					